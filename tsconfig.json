{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "routes/*": [ "src/controllers/*" ],
      }
    },
    "include": ["src/**/*.ts", "types/*.d.ts"],
    "exclude": ["node_modules", ".vscode", "tests/**/*.ts"]
  }