{
  "name": "tech_blog_mvc",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "compile-styles": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/assets/sass/main.scss public/css/styles.css",
    "css-minify": "cleancss -O1 --format breaksWith=lf --source-map --source-map-inline-sources --output public/css/styles.min.css public/css/styles.css",
    "process-styles": "npm run compile-styles && npm run css-minify",
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "eslint . --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc process-styles",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node dist/server.js",
    "seed": "cd dist && seeds/seed.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pattiqus/Tech_Blog_MVC.git"
